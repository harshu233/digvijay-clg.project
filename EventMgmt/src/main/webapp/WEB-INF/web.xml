<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
         http://jakarta.ee/xml/ns/jakartaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>EventMgmt</display-name>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.eventmgmt.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.eventmgmt.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.eventmgmt.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
    <servlet-name>ContactDeleteServlet</servlet-name>
    <servlet-class>com.eventmgmt.servlet.ContactDeleteServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ContactDeleteServlet</servlet-name>
    <url-pattern>/ContactDeleteServlet</url-pattern>
</servlet-mapping>

    <servlet>
        <servlet-name>EventListServlet</servlet-name>
        <servlet-class>com.eventmgmt.servlet.EventListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventListServlet</servlet-name>
        <url-pattern>/api/events</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterEventServlet</servlet-name>
        <servlet-class>com.eventmgmt.servlet.RegisterEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterEventServlet</servlet-name>
        <url-pattern>/RegisterEventServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminEventServlet</servlet-name>
        <servlet-class>com.eventmgmt.servlet.AdminEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminEventServlet</servlet-name>
        <url-pattern>/AdminEventServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
